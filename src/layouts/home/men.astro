---

<div class="container card-sliderbg">
  <div class="row">
    {
      cardData.map((data) => (
        <div class="swiper-slide  col-md-3  col-sm-4 col-xs-2">
          <div class="position-relative ">
            {" "}
            <div class="card ">
              <img src={data.img} class="card-img-top" alt="..." />
              <div class="card-body">
                <div class="card-text">
                  <p class="text-muted review">
                    <i class="fa-solid fa-star" style="color: #e5c838;" />
                    <i class="fa-solid fa-star" style="color: #e5c838;" />
                    <i class="fa-solid fa-star" style="color: #e5c838;" />

                    {data.review}
                  </p>
                  <h5>{data.title}</h5>
                  <p class="price-1">
                    {data.price} <del class="price-cut">$5557</del>
                  </p>
                  <div class="dot-container">
                    <div class="dot-3 d-flex">
                      {" "}
                      <div class="dot" />
                      <div class="dot" style="background-color:gold ;" />
                      <div
                        class="dot"
                        style="background-color:rgb(228, 14, 14) ;"
                      />
                    </div>
                    <div class="size-icon d-flex">
                      {" "}
                      <img
                        class="size-logo"
                        src="/src/images/ssize.png"
                        alt=""
                      />
                      <img
                        class="size-logo"
                        src="/src/images/msize.png"
                        alt=""
                      />
                      <img
                        class="size-logo"
                        src="/src/images/xlsize.png"
                        alt=""
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
