import card7 from "@images/latestarival/whitehoody.jpg";
import card8 from "@images/latestarival/blackjeansmen.jpg";

import { Icon } from "astro-icon";
const cardData = [
  {
    img: card1,
    review: "10 Reviews",
    title: "Women's brown jacket",
    price: "$49",
  },
  {
    img: card2,
    review: "3 Reviews",
    title: "Men's cargo pant",
    price: "$24",
  },
  {
    img: card3,
    review: "6 Reviews",
    title: "Black leather shoe",
    price: "$29",
  },
  {
    img: card4,
    review: "2 Reviews",
    title: "Men's long jacket",
    price: "$79",
  },
  {
    img: card5,
    review: "2 Reviews",
    title: "Black high shirts",
    price: "$79",
  },
  {
    img: card6,
    review: "2 Reviews",
    title: "Brown sweatshirt",
    price: "$79",
  },
  {
    img: card7,
    review: "2 Reviews",
    title: "White hoodie",
    price: "$79",
  },
  {
    img: card8,
    review: "2 Reviews",
    title: "Black jeans ",
    price: "$79",
  },
